{
    "name": "@form-validation/plugin-bootstrap5",
    "version": "2.4.0",
    "description": "The best validation library for JavaScript",
    "license": "https://formvalidation.io/license",
    "homepage": "https://formvalidation.io",
    "author": {
        "name": "Nguyen Huu Phuoc",
        "email": "me@phuoc.ng",
        "url": "https://twitter.com/nghuuphuoc"
    },
    "keywords": [
        "validate",
        "validator"
    ],
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/amd/*.*",
        "lib/cjs/*.*",
        "lib/esm/*.*",
        "lib/styles/*.*",
        "lib/umd/*.*",
        "lib/index.d.ts",
        "lib/index.js"
    ],
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@form-validation/validator-not-empty": "2.4.0"
    },
    "dependencies": {
        "@form-validation/core": "2.4.0",
        "@form-validation/plugin-framework": "2.4.0",
        "@form-validation/plugin-icon": "2.4.0",
        "@form-validation/plugin-message": "2.4.0"
    },
    "scripts": {
        "clean": "rm -rf lib && mkdir lib",
        "build:css": "sass --no-source-map styles/index.scss lib/styles/index.css && sass --no-source-map --style compressed styles/index.scss lib/styles/index.min.css",
        "build:js": "cp src/index.d.ts lib && cp dist/index.js lib && rollup -c ../../rollup.config.cjs",
        "release": "npm publish --access public",
        "test": "mocha"
    }
}
